{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
    "AllowedHosts": "*",

    "AuthorizationOptions": {
        "RolePermissions": [
            {
                "Role": "Admin",
                "Permissions": [ "Read", "Write" ]
            },
            {
                "Role": "User",
                "Permissions": [ "Read" ]
            }
        ]
    }
}